{
    "name": "prezly/kubernetes-client",
    "description": "Minimalistic Kubernetes API client implementation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Voskoboinyk",
            "email": "ivan@prezly.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "peridot-php/peridot": "^1.19"
    },
    "autoload": {
        "psr-4": {
            "Prezly\\KubernetesClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Prezly\\KubernetesClient\\Tests\\": "testsrc"
        }
    }
}
